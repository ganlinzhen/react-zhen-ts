// 常用样式
.clearfix
  zoom 1
  &:after
    content: ""; 
    display: block; 
    height: 0; 
    clear: both; 
    visibility: hidden;
.ellipsis
  overflow: hidden; /* 超出隐藏 */
  white-space: nowrap; /* 文本不换行 */
  text-overflow: ellipsis; /* 文本超出呈现方式：省略号 */
// width
// height
// border
.noborder
  border: none !important 
// padding
// margin
// color
// position
.relative
  position relative